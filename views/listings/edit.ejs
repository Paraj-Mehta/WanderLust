<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
    <h2>Edit Your Listing</h2>
    <br>
    <form method="post" action="/listings/<%= item._id %>?_method=PUT">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Enter your title" value="<%= item.title %>" id="title" class="form-control">
        </div>

        <div class="mb-3"> 
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description here" id="description" class="form-control"><%= item.description %></textarea>
        </div>

        <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="text" name="listing[image]" placeholder="Enter image URL" value ="<%= item.image %>" class="form-control" id="image">
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" placeholder="Enter price" value="<%= item.price %>" id="price" class="form-control">
        </div>

        <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" placeholder="Enter the loaction of the place" id="location" class="form-control" value="<%= item.location %>">
        </div>
        </div>

        <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" placeholder="Enter country" id="country" value="<%= item.country %>" class="form-control">
        </div>

        <br>
        <button class="btn add-btn mt-3">Edit</button>
        <br><br>

    </form>
        </div>
    </div>
</body>
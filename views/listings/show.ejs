<% layout("/layouts/boilerplate") %>
<body>
    <!-- Display the content of a listing -->
    <div class="row">
        <div class="col-8 offset-2 showCard ">
               <br>
                <h2> <b><%= item.title %></b> </h2> 
                <br>
        </div>

        <!-- Image  -->
        <div class="card col-6 offset-2 showCard">
        <img src="<%= item.image.url %>" class="card-img-top show-img" alt="...">
        
        <!-- Description -->
        <div class="card-body">
        <p class="card-text"> <%= item.owner.username %></p>
        <p class="card-text"><%= item.description %> </p>
        <p class="card-text">&#8377; <%= item.price.toLocaleString("en-IN") %></p>
        <p class="card-text"> <%= item.location %> </p>
        <p class="card-text"><%= item.country %> </p>

        </div>
        </div>
    </div>

    <!-- Buttons -->
    <% if(currUser && currUser._id.equals(item.owner._id)) { %>
    <div class="btns">
        <a href="/listings/<%= item._id %>/edit"><button class="btn add-btn">Edit this Listing</button></a>
        <form method="post" action="/listings/<%= item._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
        </form>
    </div>
    <hr>
    <% } %>

    <!-- Review Form  -->
    <div class="col-8 offset-2 mb-3">
        <% if(currUser){ %>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= item.id %>/reviews" method="post" class="needs-validation" novalidate>
            <!-- For Ratings -->
            
<!--                 
                <input type="range" min="1" max="5" id="rating" name="review[rating]">
            </div> -->

        <div class="mb-3 mt-3">
            <label for="rating" class="form-label"> Rating</label>
        <fieldset class="starability-slot">
            <!-- <legend>First rating:</legend> -->
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        </div>

            <!-- For Comments -->
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">
                Please add a comment.
                </div>
            </div>


            <!-- Submit Button -->
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>

        <!-- Show reviews -->
         <% if(item.reviews.length > 0){ %>
         <hr>
        <div class="row">
        <p><b>All Reviews</b></p>
        <% for(review of item.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="card-text starability-result" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><%= review.comment %></p>
                <form action="/listings/<%= item.id %>/reviews/<%= review.id %>?_method=DELETE" method="post">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
        </div>
        <% } %>
        </div>
        <% } %>
    </div>
</body>
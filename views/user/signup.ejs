<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3 mb-3">Sign up for Wanderlust</h1>
        <div class="col-6 offset-3">

            <form action="/signup" method="post" novalidate class="needs-validation">

                <!-- UserName  -->
                <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter your username" id="username" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
                </div>

                <!-- Email  -->
                <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="Enter your email" id="email" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
                </div>

                <!-- Password  -->
                <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter password" id="password" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
                </div>

                <button class="btn btn-danger">Sign Up</button>
            </form>
        </div>
    </div>